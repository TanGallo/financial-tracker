<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.gotchasomething.mynance">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name="ca.gotchasomething.mynance.MainActivity">
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".LayoutOnboarding">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name="ca.gotchasomething.mynance.LayoutDebt"/>
        <activity android:name="ca.gotchasomething.mynance.AddDebt"/>
        <activity android:name="ca.gotchasomething.mynance.AddSavings"/>
        <activity android:name="ca.gotchasomething.mynance.LayoutDailyMoney"/>
        <activity android:name="ca.gotchasomething.mynance.LayoutBudget"/>
        <activity android:name="ca.gotchasomething.mynance.LayoutSavings"/>
        <activity android:name="ca.gotchasomething.mynance.LayoutSpendingReport"/>
        <activity android:name="ca.gotchasomething.mynance.LayoutHelp"/>
        <activity android:name="ca.gotchasomething.mynance.AddBudgetIncome"/>
        <activity android:name="ca.gotchasomething.mynance.AddBudgetExpense"/>
        <activity android:name="ca.gotchasomething.mynance.LayoutSetUp"/>
        <activity android:name="ca.gotchasomething.mynance.LayoutOnboardingL"/>
        <activity android:name="ca.gotchasomething.mynance.LayoutOnboardingP"/>
    </application>

</manifest>
